@model ASP_.NET_MVC.Models.User;

@{
    ViewData["Title"] = "Atualizar";
}

<h1>Atualizar</h1>

<form asp-action="Atualizar" method="post">
    <input asp-for="Id" hidden/>
    <div class="form-group">
        <label asp-for="Nome">Nome</label>
        <input asp-for="Nome" class="form-control" placeholder="Insira o nome" />
    </div>
    <div class="form-group">
        <label asp-for="Sobrenome">Sobrenome</label>
        <input asp-for="Sobrenome" class="form-control" placeholder="Insira o sobrenome" />
    </div>
    <input type="submit" value="Atualizar" class="btn btn-success" />
</form>